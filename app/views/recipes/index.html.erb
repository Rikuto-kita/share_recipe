<%= render  "shared/header" %>
<div class = 'main'>

  <div class = "top-image">
    <h2 class='service-title'>
     毎日の食卓を豊に
    </h2>
    <p class = "service-explain">
    share recipeはレシピを共有するアプリです。
    </p>
    <p class='service-explain'>
      毎日の食卓を豊にしましょう。
    </p>
  </div>

  <div class = "recipe"> 
    <% @recipes.each do |recipe|%>
      <ul class='recipe-lists'>
        <li class='list'>
          <%= link_to recipe_path (recipe.id) do %>
            <div class='recipe-img-content'>
              <%= image_tag recipe.image , class:"recipe-img"%>
            </div>
            <div class='recipe-info'>
              
              <%= recipe.name %>
             </div>
            <div class='recipe-outline'>
              <span><%= recipe.outline %>
            
          </div>
          
          
            <%= render partial: 'recipes/recipes', locals:{recipe: recipe} , as: :recipe %>
          
          
        </li>
          <% end %>
      </ul>
    <% end %>
  </div>

　 <%#投稿ボタン%>
  <%=link_to new_recipe_path do %>
    <div class='recipe-btn'>
      <span class='recipe-btn-text'>レシピを投稿する</span>
      <%= image_tag 'recipe.png' , size: '185x50' ,class: "recipe-btn-icon" %>
    </div>
  <%end%>

  

  

</div>